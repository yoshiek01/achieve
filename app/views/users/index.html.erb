<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">

        <%= profile_img(user) %>

        <%= link_to user_path(user) do %>
          <h5>ユーザ名：  <%= user.name %></h5>
        <% end %>
        <h5>メールアドレス：  <%= user.email %></h5>
        <%= render 'follow_form', user: user %>
      </div>
  <% end %>
</div>
